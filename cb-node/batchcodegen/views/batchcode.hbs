<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Batchcode</title>
  </head>
  <body>
    <h1>Generate Batch code</h1>

    <form action="/batchcode" method="post">
      <b>Centers</b>
      <select name="center">
        {{#each centers as |c|}}
          <option value="{{c.id}}">{{c.name}}</option>
        {{/each}}
      </select>

      <br />
      <b>Seasons</b>
      <select name="season">
        {{#each seasons as |s|}}
          <option value="{{s.id}}">{{s.name}}</option>
        {{/each}}
      </select>

      <br />
      <b>courses</b>
      <select name="course">
        {{#each courses as |c|}}
          <option value="{{c.id}}">{{c.name}}</option>
        {{/each}}
      </select>
      <br />
      <b>Year</b>
      <select name="year">
        {{#each years as |y|}}
          <option value="{{y}}">{{y}}</option>
        {{/each}}
      </select>
      <br />
      <b>Batch No.</b>
      <input  name="batchno" type="number" min="1" max="5" />
      <b>Start</b>
      <input type="date" name="start" >
      <b>End</b>
      <input type="date" name="end" >
      <br>
      <input type="submit" name="submit" >
      <input type="reset" name="reset"  >
    </form>
  </body>
</html>